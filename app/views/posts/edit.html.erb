<div class="col-md-4 col-md-offset-4">
  <h2>编辑发表过的文章</h2>
  <hr>
  <%= simple_form_for [@group,@post] do |f| %>
  <div class="form-group">
      <%= f.input :content, label: '请填写文章内容', input_html: { class: "form-control"} %>
      <%#= f.input :, input_html: { class: "form-control"} %>
  </div>
  <%= f.submit "Submit", :disable_with => 'Submiting...' %>
  <%= link_to("返回",groups_path, class: "btn btn-sm btn-default") %>
  <% end %>
</div>
